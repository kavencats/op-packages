config audit 'global'
    option enabled '1'
    option log_level 'info'
    option log_file '/var/log/audit.log'
    option max_log_size '1000000'
    option retention_days '30'
    option monitor_system '1'
    option monitor_network '1'
    option monitor_login '1'

config rule 'system_events'
    option name 'system_changes'
    option action 'log'
    option target 'system'
    list events 'package_install'
    list events 'service_change'
    list events 'config_modification'

config rule 'network_events'
    option name 'firewall_changes'
    option action 'log'
    option target 'network'
    list events 'nftables_rule_change'
    list events 'port_scan'
    list events 'connection_attempt'

config rule 'login_events'
    option name 'authentication'
    option action 'log'
    option target 'authentication'
    list events 'login_success'
    list events 'login_failure'
    list events 'privilege_escalation'