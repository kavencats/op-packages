#!/bin/sh
# Pre-removal script for network-audit

echo "Network-audit pre-removal cleanup..."

# 检查是否在真实系统上运行
if [ -z "$IPKG_INSTROOT" ]; then
    # 停止服务
    if [ -x "/etc/init.d/network-audit" ]; then
        echo "Stopping network-audit service..."
        /etc/init.d/network-audit stop
    fi
    
    # 禁用服务
    if [ -f "/etc/rc.d/S??network-audit" ]; then
        echo "Disabling network-audit service..."
        /etc/init.d/network-audit disable
    fi
fi

exit 0
