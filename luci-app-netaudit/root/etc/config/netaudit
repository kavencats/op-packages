# 网络审计配置
# 全局设置
config global 'settings'
	option enabled '0'
	option log_level 'info'
	option log_rotation 'daily'
	option max_log_size '10'
	option store_days '30'

# 流量监控设置
config traffic 'monitor'
	option sampling_rate '100'
	option capture_protocols 'tcp udp icmp'
	option track_local '1'
	option track_wan '1'
	option track_lan '1'

# 过滤规则设置
config filter 'rules'
	option block_suspicious '0'
	option scan_threshold '100'
	list alert_ports '22'
	list alert_ports '23'
	list alert_ports '3389'

# 通知设置
config notification 'alerts'
	option email_alerts '0'
	option syslog_alerts '1'
	option webhook_alerts '0'
	option alert_interval '300'
